<%= simple_form_for (@property) do |f| %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :category %>
  <%= f.input :theme %>
  <%= f.input :price, as: :integer, input_html: { min: '0', max: '9999', step: '1' } %>
  <%= f.submit "Submit", class: "btn btn-secondary" %>
<% end %>
